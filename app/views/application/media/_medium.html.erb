<% form = form_for @req_objects, html: {id: "select_mediam_#{medium.id}"} do |f| %>
  <%= form_hidden f, :kind, :value => "#{params[:s]}" %>
  <%= form_hidden f, :tag_list, :value => "#{params[:t]}" %>
  <%= form_hidden f, :medium_id, :value => "#{medium.id}" %>
  <%= form_submit f, nil, [], :as => :select %>
<% end if @course and @material %>

<%= 
  render :partial => "application/media/#{medium.kind}", 
         :locals => { :form => form, medium.kind.to_sym => medium, 
           "#{medium.kind}_counter".to_sym => medium_counter, 
           :action => (defined? action) ? action : nil } 
%>
