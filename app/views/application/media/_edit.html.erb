<%= form_for the_form_path, remote: true do |f| %>	
  <div class="three fields">
  	<%= f.text_field :name  %>
		<%= f.hidden_field :is_a_link  %>
		<% if @medium.is_a_link %>
			<%= f.text_field :url %>
		<% end %>

  	<% if @medium.is_a_link %>
			<%= f.select(:source, t("config.medium.#{@medium.kind}.source"), value: @medium.source, include_blank: false) %>
		<% end %>
  </div>
  
	<%= f.submit remote: true %> 
  <%= f.cancel @medium.course ? teach_course_medium_path(@medium.course, @medium) :  medium_path(@medium), remote: true %>
<% end %>


