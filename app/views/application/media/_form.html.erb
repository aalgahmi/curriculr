<%= ui_header Medium.model_name.human(count: 3), style: :h2 unless @course %>

<%= form_header %>

<%= themed_form_for the_form_path, :html => {:multipart => true} do |f| %>	
  <%= form_hidden f, :m %>
  <%= form_static f, :kind, :value => t("config.medium.kind.#{@medium.kind}") %>
  <%= form_hidden f, :kind %>
  <%= form_text f, :name  %>
  <%= form_checkbox f, :is_a_link, disabled: !@medium.new_record? || !current_account.config['allow_file_upload'] %>
  <%= form_file f, :path if current_account.config['allow_file_upload'] && @medium.new_record? %>
  <%= form_text f, :copyrights %>
  <%= form_select f, :source, t("config.medium.#{@medium.kind}.source"), 
        value: @medium.source, include_blank: true %>
  <%= form_text f, :url %>
  <%= form_hidden f, :tag_list %>
  
  <%= form_submit f, @medium.m.present? ? the_material_path_out(@medium.kind, @medium.m) : the_path_out %>
<% end %>
