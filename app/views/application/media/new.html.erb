<% if @medium.m.present? %>
	<%= ui_header t('activerecord.actions.new', :name => t('page.text.file_or_external_link')), 
				subtext: t("activerecord.actions.#{@medium.kind}"), style: @course ? :h3 : :h2 %>
<% else %>
	<%= ui_header t('activerecord.actions.new', :name => t('page.text.external_link')), 
				subtext: t("activerecord.actions.#{@medium.kind}"), style: @course ? :h3 : :h2 %>
<% end %>

<%= themed_form_for the_form_path, :html => {:multipart => true} do |f| %>	
	<%# form_static f, :kind, :value => t("config.medium.kind.#{@medium.kind}") %>
  <%= form_hidden f, :kind %>
  <%= form_text f, :name  %>
	<% if @medium.m.present? %>
  	<%= form_hidden f, :m %>

  	<%= form_checkbox f, :is_a_link, disabled: !@medium.new_record? || !@medium.file_upload_allowed? %>
  	<%= form_file f, :path if @medium.file_upload_allowed? && @medium.new_record? %>
  <% else %>
		<%= form_checkbox f, :is_a_link, disabled: true %>
  <% end %>

  <%= form_select f, :source, t("config.medium.#{@medium.kind}.source"), 
        value: @medium.source, include_blank: false %>
  <%= form_text f, :url, :placeholder => true %>
  <%= form_hidden f, :tag_list %>
  
  <% 
  	cancel_path = if @medium.m.present? 
  		path_ids = @medium.m.split(',')
      unit_id = path_ids[1] != '0' ? path_ids[1] : nil
      lecture_id = path_ids[2] != '0' ? path_ids[2] : nil
  		if lecture_id
  			teach_course_unit_lecture_path(@course, unit_id, lecture_id)
  		elsif unit_id
      	teach_course_unit_path(@course, unit_id, :show => 'documents')
      else
        teach_course_path(@course)
      end
    else
    	the_path_out(:s => @medium.kind)
    end
  %>
  <%= form_submit f, cancel_path %>
<% end %>