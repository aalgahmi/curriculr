<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <br/>
    <div class="panel panel-default">
      <ul id="signinOrUpTabs" class="nav nav-tabs" role="tablist">
        <li role="presentation">
          <%= link_to t('page.text.sign_in'), new_session_path(resource_name) %>
        </li>
        <li role="presentation" class="active">
          <a href="#"><strong><%= t('page.text.sign_up') %></strong></a>
        </li>
      </ul>
      <div class="panel-body">
        <br/>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= form_text f, :name, label: false, placeholder: true %>
          <%= form_email f, :email, label: false, placeholder: true %>
          <%= form_password f, :password, label: false, placeholder: true %>
          <%= form_password f, :password_confirmation, label: false, placeholder: true %>
          
          <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
            <% links = [{ text: t('page.text.registration_terms_and_conditions_html', 
                          link: link(:page, :terms, localized_page_path(:terms))) }] %>
          <% end %>
          <%= form_submit f, false, links %>
        <% end %>
      </div>
    </div>
  </div>
</div>