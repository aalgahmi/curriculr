<div class="hero-unit">
  <div class="jumbotron">
    <div class="<%= css_container %> text-center">
      <h1><i class="fa fa-newspaper-o fa-6"></i></h1>
      <h2><%= scoped_t("#{current_account.slug}.site.blog.line1_html") %></h2>
      <p><%= scoped_t("#{current_account.slug}.site.blog.line2_html") %></p>
    </div>
  </div>
</div>

<div id="main-container" class="<%= css_container %>">
  <%= render partial: '/side_rails' %>
  <div class="row">
		<div class="<%= css_columns(8, 2) %>">
      <% if @page_header %>
        <%
        action = nil
        subtext = nil
        if !current_user and @klass and @klass.previewed
          action = ui_klass_enrollment_action(@klass, :enroll, true, true)
        end

        subtext = klass_from_and_to_dates(@klass) if @klass
        %>
        <%= ui_header @page_header, action: action, style: :h2, subtext: subtext %>
      <% end %>

			<%= yield %>
		</div>
  </div>
</div>
