<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <br/>
    <div class="panel panel-default">
      <ul id="signinOrUpTabs" class="nav nav-tabs" role="tablist">
        <li role="presentation">
          <%= link_to t('page.text.sign_in'), main_app.auth_signin_path %>
        </li>
        <li role="presentation" class="active">
          <a href="#"><strong><%= t('page.text.sign_up') %></strong></a>
        </li>
      </ul>
      <div class="panel-body">
        <br/>
        <%= form_for @user, url: url_for(controller: 'auth/registrations', action: 'create'), method: :post do |f| %>
          <%= f.text_field :name, label: false, placeholder: true %>
          <%= f.email_field :email, label: false, placeholder: true %>
          <%= f.password_field :password, label: false, placeholder: true %>
          <%= f.password_field :password_confirmation, label: false, placeholder: true %>

          <% links = [{ text: t('page.text.registration_terms_and_conditions_html',
                        link: link(:page, :terms, localized_page_path(:terms))) }] %>
          <%= form_submit f, false, links %>
        <% end %>
      </div>
    </div>
  </div>
</div>
