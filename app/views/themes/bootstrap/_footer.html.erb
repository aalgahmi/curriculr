<%
add_item_to_app_menu :site_bottom, link('miscellaneous', :about, main_app.localized_page_path(:about)), title
add_item_to_app_menu :site_bottom, link(:page, :services, main_app.localized_page_path(:services)), title
add_item_to_app_menu :site_bottom, link('miscellaneous', :contactus, main_app.contactus_path), title

section = t('page.titles.more_info_html')
add_item_to_app_menu :site_bottom, link_to(css_icon('th-list', 1) + Klass.model_name.human(count: 3) , main_app.  learn_klasses_path), section
add_item_to_app_menu :site_bottom, link(:page, :blogs, main_app.blogs_path), section

section = t('page.titles.follow_us_html')
current_account.config['social_pages'].each do |page, at|
  if at && at.strip.present?
    link = (link_to at, :title => t('activerecord.actions.visit_us_at', :name => page) do
      content_tag(:i, '', class: "fa fa-#{page} fa-lg") + " " + page.titleize
    end)
    add_item_to_app_menu :site_bottom, link, section
  end
end
%>

<%= mountable_fragments :site_bottom_menu %>

<footer>
  <div class="footer">
    <div class="<%= css_container %> footer-links">
      <div class="row">
        <div class="<%= css_columns(6) %>">
          <% mission = Page.localized(:mission) %>
          <%= markdown mission.about, :html => mission.html if mission %>

          <% if mission && current_user && current_user.has_role?(:admin) %>
            <%= link(:page, :edit, main_app.edit_page_path(mission), :class => css(button: [:success, :xs])) %>
          <% end %>
        </div>
        <% app_menu(:site_bottom).reject{|k,v| k == :_}.each do |section, items| %>
          <div class="<%= css_columns(2) %> col-sm-4 col-xs-4">
            <ul>
              <li><h4><span><%= section %></span></h4></li>
              <% items.each do |item| %>
                <li><%= item %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="footer-bottom">
    <div class="<%= css_container %>">
      <div class="row">
        <div class="<%= css_columns(8) %>">
          <span>
            Â© <%= t('page.text.copyrights', :year => Time.zone.now.year) %>
            &nbsp;&nbsp;|&nbsp;&nbsp;
            <%= link :page, :terms, main_app.localized_page_path(:terms) %>
            &nbsp;&nbsp;|&nbsp;&nbsp;
            <%= link :page, :privacy, main_app.localized_page_path(:privacy) %>
          </span>
        </div>
        <div class="<%= css_columns(4) %>">
          <div class="row text-right">
            <% if current_account.config['title'] !~ /Curriculr/i %>
              <%= t('page.text.powered_by_html', logo: link_to(
                    image_tag("/images/curriculr-white.png"), 'http://www.curriculr.org', target: '_new'
                  )) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
