<% data = dashboard_course_activity_counts(@course) %>
<% chart1 = ui_chart 'course_activity_counts', 'PieChart', data[:counts], {legend: 'none', title: t('page.title.activity_counts')}, 300 %>
<% data = dashboard_course_medium_counts(@course) %>
<% chart2 =  ui_chart 'course_medium_counts', 'PieChart', data[:counts], {legend: 'none', title: Medium.model_name.human(:count => 3)}, 300 %>

<%= ui_side_by_side chart1, chart2, 'eight by eight' %>

<% data = dashboard_course_question_counts(@course) %>
<% chart3 = ui_chart 'course_question_counts', 'PieChart', data[:counts], {legend: 'none', title: Question.model_name.human(:count => 3)}, 300 %>
<% data = dashboard_course_assessment_counts(@course) %>
<% chart4 = ui_chart 'course_assessment_counts', 'PieChart', data[:counts], {legend: 'none', title: Assessment.model_name.human(:count => 3)}, 300 %>

<%= ui_side_by_side chart3, chart4, 'eight by eight' %>

<%= ui_chart 'course_daily_activities', 
  'LineChart', 
  dashboard_course_activities_by_day(3.weeks.ago, @course),
  {curveType: 'function', legend: { position: 'top' }, chartArea:{left:0,top:40,width:'100%',height:'75%'} }, 300 %>
