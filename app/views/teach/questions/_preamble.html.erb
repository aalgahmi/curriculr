<%= 
links = [] 
links << link(:question, :show_answer, learn_klass_assessment_show_answer_path(@klass, @assessment, q), id: "show_answer_link_#{q.id}", method: :post, remote: true, class: 'ui secondary basic button') if @assessment && show_answer
links << link_to(Question.human_attribute_name(:hint), "##{q.id}-hint", class: "question-hint-link ui primary basic button") if q.hint.present? 
links << link_to(Question.human_attribute_name(:explanation), "##{q.id}-explanation", class: "question-explanation-link ui positive basic button") if (@attempt.blank? || @attempt.state == 2) && q.explanation.present? 

ui_buttons(links, class: 'mini right floated')
%>

