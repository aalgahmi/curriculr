<%= form_header %>

<%= themed_form_for [:teach, @course, @klass, @forum] do |f| %>
  <%= f.text_field :name, :input_html => {:class => 'span6'} %>
  <%= f.markdown :about %>
  <%= f.check_box :active %>
  <%= f.check_box :graded %>
  
  <%= f.submit %>
  <%= f.cancel url_for([:teach, @course, @klass, :show => 'forums']) %>
<% end %>
