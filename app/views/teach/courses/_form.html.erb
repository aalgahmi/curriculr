<%= form_header %>

<%= themed_form_for [:teach, @course] do |f| %>
  <div class="row">
    <div class="<%= css_columns(5) %>">
	    <%= f.text_field :slug, placeholder: true %>
    </div>
    <div class="<%= css_columns(7) %>">
	    <%= f.text_field :name %>
    </div>
  </div>

	<%= f.markdown :about, :size => '60x5' %>

  <div class="row">
    <div class="<%= css_columns(6) %>">
	    <%= f.number_field :weeks %>
    </div>
    <div class="<%= css_columns(6) %>">
	    <%= f.number_field :workload %>
    </div>
  </div>
  <div class="row">
    <div class="<%= css_columns(6) %>">
      <%= f.select :locale, $site['supported_locales'].invert %>
    </div>
    <div class="<%= css_columns(6) %>">
      <%= f.country_select :country, nil, {:include_blank => true}, :class => "chosen-select #{rtl? ? 'chosen-rtl' : ''}" ,
            :'data-placeholder'=> t('helpers.placeholder.country') %>
    </div>
  </div>

  <div class="row">
    <div class="<%= css_columns(6) %>">
      <%= f.select :level_list, Translator.to_hash(I18n.locale, "#{current_account.slug}.site.level.*").invert,
            {:value => @course.level_list}, {:multiple => true, :class => "chosen-select #{rtl? ? 'chosen-rtl' : ''}",
             :'data-placeholder'=> t('helpers.placeholder.level_list')} %>
    </div>
    <div class="<%= css_columns(6) %>">
      <%= f.select :category_list, Translator.to_hash(I18n.locale, "#{current_account.slug}.site.category.*").invert,
            {:value => @course.category_list}, {:multiple => true, :class => "chosen-select #{rtl? ? 'chosen-rtl' : ''}",
             :'data-placeholder'=> t('helpers.placeholder.category_list')} %>
    </div>
  </div>

  <%= form_submit f, (@course && !@course.new_record? ? teach_course_path(@course) : teach_courses_path) %>
<% end %>
