<%= form_header %>

<%= themed_form_for [:teach, @course, @instructor] do |f| %>
  <%= form_hidden f, :course_id, :value => @course.id %>
  
  <% email = @instructor.new_record? ? @instructor.email : @instructor.user.email %>
	<%= form_email f, :email, :readonly => !%w(new create).include?(action_name), :value => email %>
  
	<%= form_select f, :role, t('config.staff').invert %>

  <%= form_text f, :name %>
  <%# form_text f, :title %>
  <%= form_file f, :avatar %>
  <%= form_markdown f, @instructor, :about %>
  <%= form_submit f, teach_course_path(@course, :show => 'people') %>
<% end %>