<%= form_header %>

<%= themed_form_for [:teach, @course, @instructor] do |f| %>
  <%= f.hidden_field :course_id, :value => @course.id %>
  
  <% email = @instructor.new_record? ? @instructor.email : @instructor.user.email %>
	<%= f.email_field :email, :readonly => !%w(new create).include?(action_name), :value => email %>
  
	<%= f.select :role, t('config.staff').invert %>

  <%= f.text_field :name %>
  <%# f.text_field :title %>
  <%= f.file_field :avatar %>
  <%= f.markdown :about %>
  <%= form_submit f, teach_course_path(@course, :show => 'people') %>
<% end %>