<% avatar = (instructor.avatar_url(current_account, :th) ||
     instructor.user.profile.avatar_url(current_account, :th) ||
     '/images/nobody-th.png') %>
<%= ui_media(avatar, capture do %>
      <%= instructor.name || instructor.user.name %>
      <% title = instructor.title.blank? ? nil : instructor.title %>
      <br/><small><%= title || t("config.staff.#{instructor.role}") %></small>
<% end, nil) %>

<%= markdown(instructor.about || instructor.user.profile.about || '', :class => 'shortenable-text') %>
