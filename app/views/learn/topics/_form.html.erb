<%= form_header :wrapper => false %>

<%= themed_form_for [:learn, @klass, @forum, @topic] do |f| %>
	<%= f.text_field :name %>
  <%= f.markdown :about, hint: true %>
  <%= content_tag :div, :class => "row" do %>
    <div class="<%= css_columns(6) %>">
      <%= f.number_field :points_per_post %>
    </div>
    <div class="<%= css_columns(6) %>">
      <%= f.number_field :points_per_reply %>
    </div>
  <% end if @forum.graded %>
  
  <%= f.check_box :anonymous %>
  
  <%= form_submit f, learn_klass_forum_path(@klass, @forum) %>
<% end %>
