<%= ui_header t('page.title.activities'), style: :h3 %>
<% data = dashboard_klass_activity_counts(klass) %>
<%= ui_chart 'klass_activity_counts', 'PieChart', data[:counts], {legend: 'none', backgroundColor: 'transparent'}, 300 %>

<%= ui_chart 'klass_daily_activities',
  'LineChart',
   dashboard_klass_activities_by_day(1.weeks.ago, klass),
   {curveType: 'function', backgroundColor: 'transparent', legend: { position: 'top' }, chartArea:{left:0,top:30,width:'100%',height:'80%'}}, 300 %>
