<% if @opr == :enroll %>
  $('<%= "#kls-enroll-#{@klass.id}" %>').html('<%= t("page.text.enrolled") %>');
  $('<%= "#kls-enroll-#{@klass.id}" %>').attr('disabled', true);
  $('<%= "#kls-enroll-#{@klass.id}" %>').click(function () {return false;});
  $('<%= "#kls-preview-#{@klass.id}" %>').html('<%= t("activerecord.actions.open") %>');
  $('<%= "#kls-preview-#{@klass.id}" %>').addClass("<%= css_button(:success) %>");
<% elsif @opr == :drop %>
  $('<%= "#kls-drop-#{@klass.id}" %>').html('<%= t(:dropped) %>');
  $('<%= "#kls-drop-#{@klass.id}" %>').attr('disabled', true);
  $('<%= "#kls-drop-#{@klass.id}" %>').click(function () {return false;});
  $('<%= "#kls-open-#{@klass.id}" %>').html('<%= t("activerecord.actions.preview") %>');
  $('<%= "#kls-open-#{@klass.id}" %>').removeClass("<%= css_button(:success) %>");
<% end %>

ui_rebind_application_events(jQuery);