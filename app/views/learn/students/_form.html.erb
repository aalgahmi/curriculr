<%= form_header %>

<%= themed_form_for [:learn, @student] do |f| %>
  <%= f.hidden_field :user_id, :value => @student.user.id %>

  <%= f.text_field :name %>
  <%= f.select :relationship, t('config.relationship').invert %>
  <%= f.file_field :avatar %>

  <%= form_submit f, learn_students_path %>
<% end %>