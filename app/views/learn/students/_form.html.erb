<%= form_header %>

<%= themed_form_for [:learn, @student] do |f| %>
  <%= form_hidden f, :user_id, :value => @student.user.id %>

  <%= form_text f, :name %>
  <%= form_select f, :relationship, t('config.relationship').invert %>
  <%= form_file f, :avatar %>

  <%= form_submit f, learn_students_path %>
<% end %>