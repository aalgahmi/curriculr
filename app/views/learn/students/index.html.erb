<%= ui_header Student.model_name.human(count: 3), action: link(:student, :new, new_learn_student_path, 
    :class => "ui positive button") %>

<table class="ui striped selectable small table">
	<thead>
		<tr>
			<th><%= Student.human_attribute_name(:avatar) %></th>
			<th><%= Student.human_attribute_name(:name) %></th>
			<th><%= Student.human_attribute_name(:relationship) %></th>
			<th></th>
		</tr>
	</thead>
	<tbody id="all-users">
    <% @students.each do |student| %>
    <tr>
      <td><%= image_tag student.avatar_url(current_account, :tny)  %></td>
      <td><%= student.name %></td>
      <td><%= t("config.relationship.#{student.relationship}") %></td>
      <td>
    		<%= ui_buttons [
          link(:student, :edit, edit_learn_student_path(student), class: "ui positive button"),
          link(:student, :destroy, [:learn, student], :method => :delete, confirm: true, class: "ui negative button")] %>
      </td>
    </tr>
    <% end %>
    <% if @students.empty? %>
    <tr>
      <td colspan="4"><%= t('page.text.no_record_found') %></td>
    </tr>
    <% end %>
	</tbody>
</table>
