<%= form_header text: t('auth.headers.new_password') %>

<div class="row">
  <div class="<%= css_columns(6) %>">
    <%= form_for @user, url: url_for(controller: 'auth/password_resets', action: 'update'), method: :put do |f| %>
      <%= form_hidden f, :password_reset_token %>
      <%= form_password f, :password %>
      <%= form_password f, :password_confirmation %>

      <%= form_submit f, auth_signin_path %>
    <% end %>
  </div>
</div>
