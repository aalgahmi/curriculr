<%= form_header text: t('auth.headers.change_password') %>

<%= form_for @user, url: url_for(controller: 'auth/registrations', action: 'update'), method: :put do |f| %>
  <%= f.static :email %>
  <%= f.password_field :current_password if @user.provider == 'identity' %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>
  <%= f.cancel main_app.home_path %>
<% end %>