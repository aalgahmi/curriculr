<%= form_for @user || User.new, url: url_for(controller: 'auth/sessions', action: 'create'), method: :post do |f| %>
  <%= form_email f, :email, label: false, placeholder: true %>
  <%= form_password f, :password, label: false, placeholder: true %>

  <%= form_checkbox f, :remember_me %>

  <% links = [{text: t('activerecord.actions.new_password'), path: new_auth_password_reset_path}] %>

  <%= form_submit f, false, links %>
<% end %>
