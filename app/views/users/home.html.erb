<% content_for :main_aside do %>
  <%= render("/users/user_menu") %>
<% end %>

<%= content = capture do %>
  <% if current_user.has_role?(:admin) %>
    <%= render 'home_admin' %>
  <% elsif current_user.has_role?(:faculty) %>
    <%= render 'home_faculty' %>
  <% else %>
    <%= render 'home' %>
  <% end %>
<% end %>
