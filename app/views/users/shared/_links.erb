
<% external_links = capture do %>
<% [:facebook, :google_oauth2, :twitter, :linkedin, :github].each do |app| %>
	<% if Rails.application.secrets.auth[app.to_s]['id'].present? && Rails.application.secrets.auth[app.to_s]['secret'].present? %>
		<% app_name = app == :google_oauth2 ? :google : app %>
		<%= link_to omniauth_authorize_path(resource_name, app), :class => css_button(app_name, :lg) do %>
  		<i class="fa fa-<%= app_name %> fa-lg"></i> 
  		<%= t("activerecord.actions.#{app_name}") %>
		<% end %>
	<% end %>
<% end %>
<% end %>

<% if external_links.strip.present? %>
	<%= t('page.text.external_sign_in_using') %>
	<br/><br/>
	<%= external_links %>
<% end %>