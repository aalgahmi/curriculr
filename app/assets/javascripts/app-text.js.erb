*******************************************************************************/
var ui_markdown_control = function(index){
	var md_converter = Markdown.getSanitizingConverter();
	var wmd_id = '';
	if ($(this).attr('data') !== undefined) {
		wmd_id = $(this).attr('data');
	}
	var md_editor = new Markdown.Editor(md_converter, wmd_id);
	md_editor.run();
}

window.ui_markdown_control = ui_markdown_control
$('.wmd-input').each(ui_markdown_control);


