body {
  background: @bodyBackground;
}

footer {
  border-bottom: 0.4rem solid @navBackground;
  & > .ui.menu {
    border-radius: 0rem;
  }
}   

.ui.jumbotron.segment{
  margin-top: -0.2rem;
  padding-top: 4rem;
}

.ui.grid.container + main {
  margin-top: -2rem;
}

.ui.comments {
  max-width: initial;
}
.page.clearing.header{
  padding: 0.5em 0em 0em 0em;
  border-bottom: 1px solid @borderColor;
  margin-bottom: 0.5rem;
  &:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
  }
}

body > nav > .ui.menu > .right.item{
  padding-bottom: 0px;
}